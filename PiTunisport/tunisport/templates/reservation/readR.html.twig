{% extends 'base.html.twig' %}
{% block body %}
<h1> Liste des reservations</h1>
    <div class="table-responsive border-0 rounded-3">
        <!-- Table START -->
        <table class="table table-dark-gray align-middle p-4 mb-0">
            <!-- Table head -->
            <thead>
            <tr>
                <th scope="col" class="border-0 rounded-start">Référence_réservation</th>
                <th scope="col" class="border-0">Date</th>
                <th scope="col" class="border-0">Etat</th>
                
	            <th scope="col" class="border-0">Nombre de billets</th>
                <th scope="col" class="border-0">Nom de l'utilisateur</th>
                <th scope="col" class="border-0 rounded-end">Action</th>
            </tr>
            </thead>
            <!-- Table body START -->
            {%  for r in  reservation %}
            <tbody>
            <!-- Table item -->
            <tr>
                <td>
                    <div class="d-flex align-items-center">
                        <!-- Title -->
                        <h6 class="mb-0 ms-2 table-responsive-title">
                            <a href="#">{{ r.id }}</a>
                        </h6>
                    </div>
                </td>
                <td>{{ r.dateResevation.format('d/m/Y') }}</td>
                <!-- Amount item -->
                <td>{{ r.Etat }}</td>
            
                <td>{{ r.nombreBillet }}</td>
                <!-- Period item -->
                <td>
                    <span class="badge bg-primary bg-opacity-10 text-primary">{{ r.user.username }}</span>
                </td>
                  
                <!-- Action item -->
                <td>
                    <a href="{{ path('updateReservation', {id:r.id}) }}" class="btn btn-sm btn-success-soft btn-round me-1 mb-0"><i class="far fa-fw fa-edit"></i></a>
                    <a href="{{ path('deleteReservation', {id:r.id}) }}" class="btn btn-sm btn-danger-soft btn-round mb-0"><i class="fas fa-fw fa-times"></i></a>
                </td>
            </tbody>
            {% endfor %}
            <!-- Table body END -->
        </table>
        <!-- Table END -->
    </div>
    <form action="{{ path('createReservation') }}">
        <button class="btn btn-primary mb-0 mt-3" >Ajouter une réservation</button>
    </form>
{% endblock %}


