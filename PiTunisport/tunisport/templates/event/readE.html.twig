
{% block body %}
<h1> Liste des événements</h1>
    <div class="table-responsive border-0 rounded-3">
        <!-- Table START -->
        <table class="table table-dark-gray align-middle p-4 mb-0">
            <!-- Table head -->
            <thead>
            <tr>
                <th scope="col" class="border-0 rounded-start">Numéro_événement</th>
                <th scope="col" class="border-0">Nom</th>
                <th scope="col" class="border-0">Date</th>
                <th scope="col" class="border-0">Localisation</th>
                <th scope="col" class="border-0">Type</th>
                <th scope="col" class="border-0 rounded-end">Action</th>
            </tr>
            </thead>
            <!-- Table body START -->
            {%  for e in  event %}
            <tbody>
            <!-- Table item -->
            <tr>
                <td>
                    <div class="d-flex align-items-center">
                        <!-- Title -->
                        <h6 class="mb-0 ms-2 table-responsive-title">
                            <a href="#">{{ e.id }}</a>
                        </h6>
                    </div>
                </td>
                <td>{{ e.nomEvent }}</td>
                <td>{{ e.dateEvent.format('d/m/Y') }}</td>
                <!-- Amount item -->
                <td>{{ e.localisation }}</td>
            
                <td>{{ e.typeEvent }}</td>
        
                <!-- Action item -->
                <td>
                    <a href="{{ path('updateEvent', {id:e.id}) }}" class="btn btn-sm btn-success-soft btn-round me-1 mb-0"><i class="far fa-fw fa-edit"></i></a>
                    <a href="{{ path('deleteEvent', {id:e.id}) }}" class="btn btn-sm btn-danger-soft btn-round mb-0"><i class="fas fa-fw fa-times"></i></a>
                </td>
            </tbody>
            {% endfor %}
            <!-- Table body END -->
        </table>
        <!-- Table END -->
    </div>
    <form action="{{ path('createEvent') }}">
        <button class="btn btn-primary mb-0 mt-3" >Ajouter un événement</button>
    </form>
{% endblock %}


