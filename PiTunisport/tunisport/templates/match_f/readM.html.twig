{% extends 'base.html.twig' %}
{% block body %}
<h1> Liste des matchs</h1>
    <div class="table-responsive border-0 rounded-3">
        <!-- Table START -->
        <table class="table table-dark-gray align-middle p-4 mb-0">
            <!-- Table head -->
            <thead>
            <tr>
                <th scope="col" class="border-0 rounded-start">Num√©ro_match</th>
                <th scope="col" class="border-0">Equipe1</th>
                <th scope="col" class="border-0">Equipe2</th>
	            <th scope="col" class="border-0">Type</th>
                <th scope="col" class="border-0">Stade</th>
                <th scope="col" class="border-0 rounded-end">Tournoi</th>
	            <th scope="col" class="border-0 rounded-end">Resultat_Equipe1</th>
                <th scope="col" class="border-0 rounded-end">Resultat_Equipe2</th>
                <th scope="col" class="border-0 rounded-end">Action</th>
            </tr>
            </thead>
            <!-- Table body START -->
            {%  for m in  match %}
            <tbody>
            <!-- Table item -->
            <tr>
                <td>
                    <div class="d-flex align-items-center">
                        <!-- Title -->
                        <h6 class="mb-0 ms-2 table-responsive-title">
                            <a href="#">{{ m.id }}</a>
                        </h6>
                    </div>
                </td>
                <td>{{ m.equipeA }}</td>
                <!-- Amount item -->
                <td>{{ m.equipeB }}</td>
                <td>{{ m.typeMatch }}</td>
                <!-- Period item -->
                <td>
                    <span class="badge bg-primary bg-opacity-10 text-primary">{{ m.stade }}</span>
                </td>
                <td>{{ m.tournois }}</td>
                <td>{{ m.resultatA }}</td>
	            <td>{{ m.resultatB }}</td>   
                <!-- Action item -->
                <td>
                    <a href="{{ path('updateMatch', {id:m.id}) }}" class="btn btn-sm btn-success-soft btn-round me-1 mb-0"><i class="far fa-fw fa-edit"></i></a>
                    <a href="{{ path('deleteMatch', {id:m.id}) }}" class="btn btn-sm btn-danger-soft btn-round mb-0"><i class="fas fa-fw fa-times"></i></a>
                </td>
            </tbody>
            {% endfor %}
            <!-- Table body END -->
        </table>
        <!-- Table END -->
    </div>
    <form action="{{ path('createMatch') }}">
        <button class="btn btn-primary mb-0 mt-3" >Ajouter un match</button>
    </form>
{% endblock %}

