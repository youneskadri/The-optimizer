<h1 class="card-title"> Liste des blog</h1>
<div class="card-body">

<table border="2" class="table datatable dataTable-table">
    <tr> <th>Id</th>
        <th> Titre</th>
        <th> Descreption</th>
        <th> Contenu</th>
        <th> Image</th>

    </tr>
    {%  for c in  blogs %}
        <tr>
            <td>  {{ c.id }}</td>
            <td>   {{ c.titre }} </td>
            <td>  {{ c.descreption }} </td>
            <td>  {{ c.contenu }} </td>
            <td><img src="{{ asset('/uploads/images/' ~ c.getImage()) }}" width="100px" height="100px" alt="" />
 </td>
            <td> <a href="{{ path('delete_blog', {id:c.id}) }}">Delete </a>
                <a href="{{ path('update_blog', {id:c.id}) }}">Update </a>
                <a href="{{ path('app_resume', {text:c.contenu}) }}">Resume </a>
            </td>
        </tr>
    {% endfor %}
</table>
</div>
<form action="{{ path('add_blog') }}">
    <button type="submit" class="btn btn-primary">Add blog</button>
</form>
</center>

</main>
{% endblock %}