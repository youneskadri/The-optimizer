
{% extends 'back.html.twig' %}
{% block main %}

<main id="main" class="main">
<center>
{#
<form method="post" action="{{ path('find_blog') }}">
    <label> search</label>
    <input type="text" id="titre" name="titre"/>
<input type="submit" value="search"/>
</form>
