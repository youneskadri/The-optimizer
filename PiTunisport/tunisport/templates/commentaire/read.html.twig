{% extends 'front.html.twig' %}
{% block body %}

<h1> Liste des commentaire</h1>
<table border="2">
    <tr> <th>Id</th>
        
        {# <th> User Id</th> #}
        <th> Blog Id </th>
        <th> Contenu </th>
        <th> Date  </th>
        <th> Action  </th>
    </tr>
    {%  for c in  commentaires %}
        <tr>
            <td>  {{ c.id }}</td>
            {# <td>  {{ c.user_id }} </td> #}
            <td>  {{ c.blog }} </td>
            <td>  {{ c.contenuCom }} </td>
            <td>  {{ c.dateC |date('d-m-Y') }} </td>
           
            <td><a href="{{ path('app_sentiment', {text:c.contenuCom}) }}">Detect </a> 
                <a href="{{ path('delete_commentaire', {id:c.id}) }}">Delete </a>
                <a href="{{ path('update_commentaire', {id:c.id}) }}">Update </a>

            </td>
        </tr>
    {% endfor %}
</table>
<a href="{{ path('add_commentaire') }}">
    <button>Add commentaire</button>
</a>

{% endblock %}
